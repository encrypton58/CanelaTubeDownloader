<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/svdn_header_drag_separator"
        android:layout_width="100dp"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/header_separator_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/svdn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svdn_header_drag_separator">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/svdn_shimmer_view_container_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_auto_start="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/svdn_card_view_image"
                android:layout_width="270dp"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/background_gray_dark"
                android:layout_margin="20dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/svdn_animation_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/svdn_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

            </androidx.cardview.widget.CardView>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/svdn_shimmer_view_container_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:shimmer_auto_start="true">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_container_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/background_gray_dark"
                app:cardCornerRadius="16dp">

                <TextView
                    android:id="@+id/svdn_title_author_tv"
                    style="@style/SVDNTextViewTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </androidx.cardview.widget.CardView>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginTop="36dp"
        android:background="@color/canela_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svdn_container" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/svdn_shimmer_view_container_down_formats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <include layout="@layout/svdn_bottom_sheet_placeholder" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <Button
        android:id="@+id/svdn_retry_connect_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="24dp"
        android:visibility="gone"
        android:text="Intentar de nuevo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.cardview.widget.CardView
        android:id="@+id/svdn_container_down_formats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="24dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/svdn_down_formats_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>