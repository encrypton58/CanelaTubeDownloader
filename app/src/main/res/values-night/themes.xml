<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CanelaTube" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/marron_dark_1</item>
        <item name="colorPrimaryVariant">@color/marron_dark_0</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/marron_dark_2</item>
        <item name="colorSecondaryVariant">@color/clouds_1</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorAccent">@color/marron_dark_2</item>
        <item name="android:textColor">@color/white</item>
        <item name="cardBackgroundColor">@color/red_pastel_video_background_selected</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!-- Components Custom Styles Base -->

    <style name="Theme.CanelaTube.ButtonsBaseStyle">
        <item name="backgroundTint">@color/canela_background</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="CardView.Custom">
        <item name="cardBackgroundColor">@color/canela_variant</item>
    </style>

    <!-- Components Custom Styles -->
    <style name="Theme.CanelaTube.ButtonsBaseStyle.ButtonDanger">
        <item name="backgroundTint">@color/red_pastel_video_background_selected</item>
    </style>

</resources>